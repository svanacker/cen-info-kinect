<UserControl x:Class="Org.Cen.RobotManager.Pages.PidAllParametersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Org.Cen.RobotManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Loaded="PidAllParametersControlGrid_OnLoaded">
        <controls:PidParametersUserControl x:Name="PidTypeGoControl" HorizontalAlignment="Left" Type="Go"/>
        <controls:PidParametersUserControl x:Name="PidTypeRotateControl" HorizontalAlignment="Center" Type="Rotate"/>
        <controls:PidParametersUserControl x:Name="PidTypeMaintainControl" HorizontalAlignment="Right" Type="MaintainPosition"/>
        <controls:PidParametersUserControl x:Name="PidTypeAdjustDirection" HorizontalAlignment="Left" VerticalAlignment="Bottom" Type="AdjustDirection"/>
        <controls:PidParametersUserControl x:Name="PidTypeFinalApproach" HorizontalAlignment="Center" VerticalAlignment="Bottom" Type="FinalApproach"/>
    </Grid>
</UserControl>
