<UserControl x:Class="Org.Cen.RobotManager.Controls.Lcd.LcdControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="200" Height="90">
    <Grid>
        <GroupBox Header="LCD Control" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200">
            <Grid>
                <TextBox x:Name="LcdTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.974,0.492"/>
                <Button x:Name="LcdSendButton" Height="23" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Send" Margin="10,40,0,0" Click="LcdSendButton_Click" Grid.ColumnSpan="2"/>
                <Button x:Name="LcdClearButton" Height="23" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Clear" Margin="128,38,0,0" Click="LcdClearButton_Click"/>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>