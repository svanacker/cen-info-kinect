<Window x:Name="Main_Window" x:Class="UartWPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="MainWindow" Height="484" Width="775" Loaded="Window_Loaded">
    <Grid Background="#E5E5E5E5">
        <ComboBox x:Name="COMComboBox" HorizontalAlignment="Left" Margin="536,20,0,0" VerticalAlignment="Top" Width="139" SelectionChanged="COMComboBox_SelectionChanged"/>
        <Button x:Name="LoadListButton" Content="Refresh" HorizontalAlignment="Left" Margin="682,20,0,0" VerticalAlignment="Top" Width="75" Click="LoadListButton_Click"/>
        <DockPanel HorizontalAlignment="Left" Height="100" LastChildFill="False" Margin="91,147,0,0" VerticalAlignment="Top" Width="100"/>
        <TabControl HorizontalAlignment="Stretch" Margin="25,60,10,10" VerticalAlignment="Stretch">
            <TabItem Header="Console">
                <Frame x:Name="ConsoleFrame" Source="/Pages/ConsolePage.xaml"/>
            </TabItem>
            <TabItem x:Name="PositionTabItem" Header="Position">
                <Frame x:Name="PositionFrame" Source="/Pages/PositionPage.xaml"/>
            </TabItem>
            <TabItem Header="Conf.">
                <Frame x:Name="ConfigurationFrame" Source="/Pages/ConfigurationPage.xaml"/>
            </TabItem>
            <TabItem Header="Run">
                <Frame x:Name="RunFrame" Source="/Pages/RunPage.xaml"/>
            </TabItem>
            <TabItem Header="Motion Params">
                <Frame x:Name="MotionParametersFrame" Source="/Pages/MotionParametersPage.xaml"/>
            </TabItem>
            <TabItem Header="PID Graph">
                <Frame x:Name="PIDGraphFrame" Source="/Pages/PIDGraphPage.xaml"/>
            </TabItem>
            <TabItem Header="Motion Graph">
                <Frame x:Name="MotionGraphFrame" Source="/Pages/MotionGraphPage.xaml"/>
            </TabItem>
            <TabItem Header="Raw Data">
                <Frame x:Name="RawDataFrame" Source="/Pages/RawDataPage.xaml"/>
            </TabItem>
            <TabItem Header="End Detection Params">
                <Frame x:Name="EndDetectionParametersFrame" Source="/Pages/EndDetectionParametersPage.xaml"/>
            </TabItem>
            <TabItem Header="Match">
                <Frame x:Name="MatchFrame" Source="/Pages/MatchPage.xaml"/>
            </TabItem>
            <TabItem Header="Eeprom">
                <Frame x:Name="EepromFrame" Source="/Pages/EepromPage.xaml"/>
            </TabItem>
        </TabControl>
        <Image x:Name="LogoImage" HorizontalAlignment="Left" Height="55" Margin="25,0,0,0" VerticalAlignment="Top" Width="202" Source="Resources/Images/logo.png"/>
        <Label Content="COM : " HorizontalAlignment="Left" Margin="474,20,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
