<Window x:Class="UartWPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="775" Loaded="Window_Loaded">
    <Grid Background="#E5E5E5E5">
        <ComboBox x:Name="COMComboBox" HorizontalAlignment="Left" Margin="538,50,0,0" VerticalAlignment="Top" Width="139" SelectionChanged="COMComboBox_SelectionChanged"/>
        <Button x:Name="LoadListButton" Content="Refresh" HorizontalAlignment="Left" Margin="682,50,0,0" VerticalAlignment="Top" Width="75" Click="LoadListButton_Click"/>
        <DockPanel HorizontalAlignment="Left" Height="100" LastChildFill="False" Margin="91,147,0,0" VerticalAlignment="Top" Width="100"/>
        <TabControl HorizontalAlignment="Stretch" Margin="25,60,10,10" VerticalAlignment="Stretch">
            <TabItem Header="Console">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Out Data" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox x:Name="SendTextBox1" HorizontalAlignment="Left" Height="22" Margin="10,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton1" Content="Send" HorizontalAlignment="Left" Margin="180,25,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <TextBox x:Name="SendTextBox2" HorizontalAlignment="Left" Height="22" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton2" Content="Send" HorizontalAlignment="Left" Margin="180,50,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <TextBox x:Name="SendTextBox3" HorizontalAlignment="Left" Height="22" Margin="10,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton3" Content="Send" HorizontalAlignment="Left" Margin="180,75,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <TextBox x:Name="SendTextBox4" HorizontalAlignment="Left" Height="22" Margin="10,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton4" Content="Send" HorizontalAlignment="Left" Margin="180,100,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <TextBox x:Name="SendTextBox5" HorizontalAlignment="Left" Height="22" Margin="10,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton5" Content="Send" HorizontalAlignment="Left" Margin="180,125,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <TextBox x:Name="SendTextBox6" HorizontalAlignment="Left" Height="22" Margin="10,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton6" Content="Send" HorizontalAlignment="Left" Margin="180,150,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <TextBox x:Name="SendTextBox7" HorizontalAlignment="Left" Height="22" Margin="10,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton7" Content="Send" HorizontalAlignment="Left" Margin="180,175,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <TextBox x:Name="SendTextBox8" HorizontalAlignment="Left" Height="22" Margin="10,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" KeyUp="SendTextBox_KeyUp" FontFamily="Courier New"/>
                    <Button x:Name="SendButton8" Content="Send" HorizontalAlignment="Left" Margin="180,200,0,0" VerticalAlignment="Top" Width="50" Click="SendButton_Click"/>
                    <ScrollViewer x:Name="ContentScrollViewer" Margin="260,25,0,25">
                        <TextBox x:Name="ContentTextBox" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch" FontFamily="Courier New"/>
                    </ScrollViewer>
                    <Button x:Name="ClearButton" Content="Clear" Margin="260,0,0,0" VerticalAlignment="Bottom" Width="75" Click="ClearButton_Click"/>

                    <Label Content="Out Data" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label Content="In Data" HorizontalAlignment="Stretch" Margin="260,0,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Configuration">
                <Grid Background="#FFFFFFFF">

                </Grid>
            </TabItem>
            <TabItem Header="Run">
                <Grid Background="#FFFFFFFF"/>
            </TabItem>
        </TabControl>
        <Image x:Name="LogoImage" HorizontalAlignment="Left" Height="55" Margin="25,0,0,0" VerticalAlignment="Top" Width="202" Source="logo.png"/>
    </Grid>
</Window>
